@model IEnumerable<endoREG_MVC.Models.ResponsibleParty>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateAssigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inactive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameOrGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameOrGroupNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateAssigned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inactive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOrGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOrGroupNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResponsiblePartyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResponsiblePartyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResponsiblePartyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
