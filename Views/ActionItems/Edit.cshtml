@model endoREG_MVC.Models.ActionItem

@{
    ViewData["Title"] = "Edit";
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<br />
<br />
<br />
<h1 class="font-weight-bold">Edit Action Item:</h1>

<h4 class="align-middle blockquote">@Html.DisplayFor(model => model.Title)</h4>
@if (Model.ActionItemImage != null)
{
    <img src="data:image;base64,@System.Convert.ToBase64String(Model.ActionItemImage)" class="align-middle border border-dark" />
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActionItemId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CompliancePlanId" class="control-label font-weight-bold"></label>:
                <select asp-for="CompliancePlanId" class="form-control" asp-items="ViewBag.CompliancePlanId"></select>
                <span asp-validation-for="CompliancePlanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label font-weight-bold"></label>:
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label font-weight-bold"></label>:
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label font-weight-bold"></label> (Priority):
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysToComplete" class="control-label font-weight-bold"></label>:
                <input asp-for="DaysToComplete" class="form-control" />
                <span asp-validation-for="DaysToComplete" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Location" class="control-label font-weight-bold"></label>:
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="ActionItemImage" class="control-label"></label>
                    <input asp-for="ActionItemImage" class="form-control" />
                    <span asp-validation-for="ActionItemImage" class="text-danger"></span>
                </div>*@
            @*<div class="form-group">
                    <label asp-for="ActionItemImage" class="control-label">Upload an Action Item Image</label>
                    <input type="file" name="ActionItemImage" asp-for="ActionItemImage" accept=".png, .jpg, .tif, .jpeg, .gif" />
                </div>*@
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Complete" /> @Html.DisplayNameFor(model => model.Complete)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="font-weight-bold btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index" class="font-weight-bold text-dark" style="vertical-align: middle; font-size: 14.5pt"><i class="material-icons tiny">arrow_back</i> Back to List</a>
    <br />
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
